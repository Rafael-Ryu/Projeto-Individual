<script>
  function sidebarData() {
    return {
      currentPage: getCurrentPage(),
      isAdmin: checkAdminStatus()
    }
  }

  function checkAdminStatus() {
    const userDept = '<%= locals.currentUser ? locals.currentUser.departamento : "" %>';
    const userEmail = '<%= locals.currentUser ? locals.currentUser.email : "" %>';

    return userDept === 'Administração' || userEmail === 'admin@sistema.com';
  }

  function getCurrentPage() {
    const path = window.location.pathname;
    if (path === '/dashboard') return 'dashboard';
    if (path === '/minhas-reservas') return 'reservas';
    if (path === '/nova-reserva') return 'nova-reserva';
    if (path === '/buscar-salas') return 'buscar-salas';
    if (path === '/calendario') return 'calendario';
    if (path === '/favoritos') return 'favoritos';
    if (path === '/historico') return 'historico';
    if (path === '/relatorios') return 'relatorios';
    if (path.startsWith('/admin/')) return 'admin';
    if (path === '/ajuda') return 'ajuda';
    if (path === '/configuracoes') return 'configuracoes';
    return 'dashboard';
  }

  async function loadQuickStats() {
    try {
      const stats = {
        hoje: Math.floor(Math.random() * 5),
        semana: Math.floor(Math.random() * 15) + 5,
        favoritas: Math.floor(Math.random() * 8) + 2
      };

      this.stats = stats;
    } catch (error) {
      console.error('Erro ao carregar estatísticas:', error);
      this.stats = { hoje: 0, semana: 0, favoritas: 0 };
    }
  }
</script>
